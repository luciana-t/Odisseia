<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardComent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/infoComentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOME SER HUMANO"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/txtcomentCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_gravity="center_vertical"
                    android:text="Um texto longo reclamando da vida e desse trabalho gigante que nÃ£o acaba nunca"
                    android:textSize="14sp"
                    android:typeface="normal"/>

                <ImageButton
                    android:id="@+id/upCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:elevation="0dp"
                    android:onClick="voteUp"
                    android:src="@drawable/ic_up" />

                <ImageButton
                    android:id="@+id/downCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:src="@drawable/ic_down"
                    android:onClick="voteDown"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
